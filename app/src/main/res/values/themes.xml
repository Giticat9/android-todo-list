<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.MainTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/second_color</item>
        <item name="colorPrimaryDark">@color/second_color</item>
        <item name="colorAccent">@color/second_color</item>
    </style>

    <style name="NavigationView.MainTheme" parent="ThemeOverlay.Material3.NavigationView">
        <item name="colorPrimary">@color/very_light_color</item>
    </style>

    <style name="Theme.TodoList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TodoList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/main_color</item>
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
    </style>

    <style name="Theme.TodoList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>